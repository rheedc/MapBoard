<!-- default directory 설정 -->
<decorators defaultdir="/WEB-INF/views/decorators">
	<!-- decorators를 적용시키지 않을 url 패턴 -->
	<excludes>
		<pattern>/popup/*</pattern>
	</excludes>
	
	<!-- sample -->
	<decorator name="headerFooter" page="headerFooter.jsp">
		<pattern>/member/*</pattern>
		<pattern>/total/*</pattern>
		<pattern>/place/*</pattern>
		<pattern>/board/*</pattern>
		<pattern>/decorators/*</pattern>
		<pattern>/home*</pattern>
		<pattern>/*</pattern>
		
	</decorator>
	
